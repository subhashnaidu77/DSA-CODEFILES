#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {


    char str[101];
    scanf("%s", str);  // Read input string

    int len = strlen(str);
    int isPalindrome = 1;  

    for (int i = 0; i < len / 2; i++) {
        if (str[i] != str[len - 1 - i]) {
            isPalindrome = 0;
            break;
        }
    }

if(isPalindrome){printf("yes");}
    else{printf("no");}

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
