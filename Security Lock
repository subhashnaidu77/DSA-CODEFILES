
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int n;
    scanf("%d",&n);
    int r = n, c= 1;
    int i, j, sum = n;
    
    for(i=0;i<n;i++)
    {
        for(j=1;j<r;j++)
            sum = sum + c;
        r--;
        c++;
    }
    
    printf("%d",sum);
    return 0;
}
